<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">
    <attr name="radius" format="dimension|reference" />
    <attr name="borderColor" format="color|reference" />
    <attr name="borderWidth" format="dimension|reference" />

    <declare-styleable name="RoundView">
        <attr name="radius" />
        <attr name="borderColor" />
        <attr name="borderWidth" />
    </declare-styleable>

    <declare-styleable name="RoundTextView">
        <attr name="radius" />
        <attr name="borderColor" />
        <attr name="borderWidth" />
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="radius" />
        <attr name="borderColor" />
        <attr name="borderWidth" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="borderColor" />
        <attr name="borderWidth" />
    </declare-styleable>
</resources>